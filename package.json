{
  "name": "@your-are-loud/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Voice monitoring application - monorepo",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm -r --filter \"./packages/**\" build",
    "build:all": "pnpm build && pnpm -r --filter \"./apps/{ios,android,chrome-extension}\" build",
    "test": "pnpm -r --filter \"./packages/**\" test",
    "test:all": "pnpm -r test",
    "clean": "pnpm -r --filter \"./packages/**\" clean",
    "clean:all": "pnpm -r clean && rimraf **/node_modules **/dist **/build",
    "lint": "pnpm -r --filter \"./packages/**\" lint",
    "lint:fix": "pnpm -r --filter \"./packages/**\" lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "setup": "./scripts/setup.sh"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
